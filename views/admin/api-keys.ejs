<!-- API Keys Management -->
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">API Keys Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">API Keys</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <!-- Hidden messages for alert system -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show d-none">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show d-none">
                    <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#primaryApiKeyModal">
                        <i class="bi bi-shield-lock"></i> Update Primary API Key
                    </button>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addApiKeyModal">
                        <i class="bi bi-plus-circle"></i> Add New API Key
                    </button>
                </div>
                <div class="btn-group">
                    <form action="/admin/api-keys/activate-all" method="POST" class="me-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-all"></i> Activate All
                        </button>
                    </form>
                    <form action="/admin/api-keys/deactivate-all" method="POST">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-x-lg"></i> Deactivate All
                        </button>
                    </form>
                </div>
            </div>
                
            <!-- API Keys Table -->
            <div class="card">
                <div class="card-header bg-light">
                    <h3 class="card-title"><i class="bi bi-key"></i> API Keys</h3>
                    <div class="card-tools">
                        <span class="badge bg-primary" style="font-size: 14px; padding: 5px 10px;">
                            <%= apiKeys ? apiKeys.length : 0 %> Keys
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 api-keys-table">
                            <thead>
                                <tr>
                                    <th style="width: 45%">API Key</th>
                                    <th style="width: 15%">Status</th>
                                    <th style="width: 15%">Usage</th>
                                    <th style="width: 15%">Last Used</th>
                                    <th style="width: 10%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (apiKeys && apiKeys.length > 0) { %>
                                    <% apiKeys.forEach(key => { %>
                                        <tr>
                                            <td>
                                                <div class="text-break">
                                                    <code style="font-size: 14px;"><%= key.value || 'N/A' %></code>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (key.is_active === 1) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <span data-bs-toggle="tooltip" title="Number of times this key has been used" style="font-size: 14px;">
                                                    <%= key.usage_count || 0 %>
                                                </span>
                                            </td>
                                            <td><span style="font-size: 14px;"><%= key.last_used ? new Date(key.last_used).toLocaleString() : 'Never' %></span></td>
                                            <td>
                                                <div class="d-flex">
                                                    <form action="/admin/api-keys/<%= key._id %>/toggle" method="POST" class="me-2">
                                                        <button type="submit" class="btn btn-sm <%= key.is_active === 1 ? 'btn-warning' : 'btn-success' %>" title="<%= key.is_active === 1 ? 'Deactivate' : 'Activate' %>">
                                                            <i class="bi <%= key.is_active === 1 ? 'bi-toggle-off' : 'bi-toggle-on' %>"></i>
                                                        </button>
                                                    </form>
                                                    <form action="/admin/api-keys/<%= key._id %>/delete" method="POST">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this API key?')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <i class="bi bi-emoji-frown fs-3 d-block mb-2"></i>
                                            No API keys found. Add some keys to get started!
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> API keys are used in rotation to avoid rate limits.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Primary API Key Modal -->
<div class="modal fade" id="primaryApiKeyModal" tabindex="-1" aria-labelledby="primaryApiKeyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="primaryApiKeyModalLabel"><i class="bi bi-shield-lock"></i> Update Primary API Key</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/update-api-key" method="POST">
                <div class="modal-body">
                    <p class="text-muted">This is the fallback API key that will be used if all rotation keys fail.</p>
                    <div class="mb-3">
                        <label for="primaryApiKey" class="form-label">Primary API Key</label>
                        <input type="text" class="form-control" id="primaryApiKey" name="apiKey" value="<%= apiKey %>" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Update Key
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add API Key Modal -->
<div class="modal fade" id="addApiKeyModal" tabindex="-1" aria-labelledby="addApiKeyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="addApiKeyModalLabel"><i class="bi bi-plus-circle"></i> Add New API Key</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/api-keys/add" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newApiKey" class="form-label">New API Key</label>
                        <input type="text" class="form-control" id="newApiKey" name="api_key" placeholder="Enter your API key" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-lg"></i> Add Key
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script> 