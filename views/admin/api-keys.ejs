<!-- Flash Messages -->
<% if (typeof flashError !== 'undefined' && flashError) { %>
<div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
    <%= flashError %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (typeof flashSuccess !== 'undefined' && flashSuccess) { %>
<div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
    <%= flashSuccess %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (typeof flashInfo !== 'undefined' && flashInfo) { %>
<div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
    <%= flashInfo %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>API Key Management</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addApiKeyModal">
        <i class="bi bi-plus-circle"></i> Add New API Key
    </button>
</div>

<!-- Active API Key Card -->
<div class="card shadow mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="card-title mb-0">Primary API Key</h5>
    </div>
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="text-break"><%= activeApiKey.value %></h4>
                <p class="text-muted small">Last updated: <%= new Date(activeApiKey.updated_at).toLocaleString() %></p>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    This is the fallback API key that will be used if all rotation keys fail. API keys are used in round-robin fashion for load balancing.
                </div>
            </div>
            <div class="col-md-4 text-end">
                <form action="/admin/update-api-key" method="POST">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="apiKey" value="<%= activeApiKey.value %>" required>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Update Primary Key
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- API Keys List -->
<div class="card shadow">
    <div class="card-header">
        <h5 class="card-title mb-0">Rotation API Keys (<%= apiKeys.length %> keys)</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>API Key</th>
                        <th>Usage Count</th>
                        <th>Last Used</th>
                        <th>Added Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% apiKeys.forEach(key => { %>
                        <tr>
                            <td class="text-break"><%= key.value %></td>
                            <td><%= key.usage_count || 0 %></td>
                            <td><%= key.last_used ? new Date(key.last_used).toLocaleString() : 'Never' %></td>
                            <td><%= new Date(key.created_at).toLocaleString() %></td>
                            <td>
                                <div class="btn-group">
                                    <form action="/admin/delete-api-key/<%= key.id %>" method="POST" class="ms-1" onsubmit="return confirm('Are you sure you want to delete this API key?');">
                                        <button type="submit" class="btn btn-sm btn-danger" <%= key.id === 0 || key.value === activeApiKey.value ? 'disabled' : '' %>>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                    <% if (apiKeys.length === 0) { %>
                        <tr>
                            <td colspan="5" class="text-center">No API keys found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add API Key Modal -->
<div class="modal fade" id="addApiKeyModal" tabindex="-1" aria-labelledby="addApiKeyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addApiKeyModalLabel">Add New API Key</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/add-api-key" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newApiKey" class="form-label">API Key</label>
                        <input type="text" class="form-control" id="newApiKey" name="apiKey" required>
                        <small class="form-text text-muted">API key must be at least 30 characters long (typically 32 hex characters)</small>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="setAsActive" name="setAsActive">
                        <label class="form-check-label" for="setAsActive">
                            Set as primary key
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add API Key</button>
                </div>
            </form>
        </div>
    </div>
</div> 