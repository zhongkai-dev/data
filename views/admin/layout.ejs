<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Phone Location Bot Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .sidebar {
            min-height: calc(100vh - 56px);
            background-color: #f8f9fa;
            border-right: 1px solid #e9ecef;
        }
        .sidebar .nav-link {
            color: #495057;
            padding: 0.75rem 1rem;
            border-radius: 0;
        }
        .sidebar .nav-link:hover {
            background-color: #e9ecef;
        }
        .sidebar .nav-link.active {
            background-color: #3a86ff;
            color: white;
        }
        .sidebar .nav-link i {
            margin-right: 10px;
        }
        .content {
            padding: 20px;
        }
        
        /* Loader Styles */
        .page-loader-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background-color: rgba(255, 255, 255, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            transition: opacity 0.5s ease;
        }
        
        .loader {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: inline-block;
            position: relative;
            border: 3px solid;
            border-color: #3a86ff #3a86ff transparent;
            animation: rotation 1s linear infinite;
        }
        
        .loader::after {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            margin: auto;
            border: 3px solid;
            border-color: transparent #FF3D00 #FF3D00;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            animation: rotationBack 0.5s linear infinite;
            transform-origin: center center;
        }
        
        @keyframes rotation {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        } 
        
        @keyframes rotationBack {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(-360deg);
            }
        }
        
        .hide-loader {
            opacity: 0;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">Phone Location Bot Admin</a>
            <div class="ms-auto d-flex">
                <div class="navbar-nav">
                    <a class="nav-link" href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Alerts container -->
    <div id="alerts-container"></div>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="d-flex flex-column flex-shrink-0 p-3">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="/admin/dashboard" class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>">
                                <i class="bi bi-speedometer2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/users" class="nav-link <%= activePage === 'users' ? 'active' : '' %>">
                                <i class="bi bi-people"></i>
                                Manage Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/api-keys" class="nav-link <%= activePage === 'api-keys' ? 'active' : '' %>">
                                <i class="bi bi-key"></i>
                                Manage API Keys
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/history" class="nav-link <%= activePage === 'history' ? 'active' : '' %>">
                                <i class="bi bi-clock-history"></i>
                                Check History
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
                <%- body %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Alert handling script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Hide loader when page is fully loaded
            const loader = document.querySelector('.page-loader-wrapper');
            if (loader) {
                loader.classList.add('hide-loader');
                setTimeout(() => {
                    loader.style.display = 'none';
                }, 500);
            }
            
            // Setup loader for navigation
            document.addEventListener('click', function(e) {
                // Check if the clicked element is a link that navigates to another page
                if (e.target.tagName === 'A' && e.target.href && 
                    !e.target.href.includes('#') && !e.target.target && 
                    e.target.href !== window.location.href) {
                    // Show loader
                    loader.style.display = 'flex';
                    loader.classList.remove('hide-loader');
                }
            });
            
            // Check if there are success or error messages
            const errorElement = document.querySelector('.alert-danger:not(.top-right-alert)');
            const successElement = document.querySelector('.alert-success:not(.top-right-alert)');
            
            // Move alerts to top-right position
            if (errorElement) {
                showTopRightAlert(errorElement.innerHTML, 'danger');
                errorElement.remove();
            }
            
            if (successElement) {
                showTopRightAlert(successElement.innerHTML, 'success');
                successElement.remove();
            }
            
            // Function to show top-right alerts
            function showTopRightAlert(message, type) {
                const alertsContainer = document.getElementById('alerts-container');
                const alertElement = document.createElement('div');
                alertElement.className = `alert alert-${type} alert-dismissible fade show top-right-alert`;
                
                // Clean up message by removing any HTML from buttons
                let cleanMessage = message;
                if (cleanMessage.includes('button')) {
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = cleanMessage;
                    const buttons = tempDiv.querySelectorAll('button');
                    buttons.forEach(btn => btn.remove());
                    cleanMessage = tempDiv.innerHTML.trim();
                }
                
                alertElement.innerHTML = `
                    ${cleanMessage}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                
                alertsContainer.appendChild(alertElement);
                
                // Auto-dismiss after 5 seconds
                setTimeout(() => {
                    alertElement.classList.add('fade-out');
                    setTimeout(() => {
                        alertElement.remove();
                    }, 500);
                }, 5000);
                
                // Close button functionality
                const closeButton = alertElement.querySelector('.btn-close');
                closeButton.addEventListener('click', function() {
                    alertElement.classList.add('fade-out');
                    setTimeout(() => {
                        alertElement.remove();
                    }, 500);
                });
            }
            
            // For debugging - show a test success message
            // Uncomment this to test alert styling
            // showTopRightAlert('All API keys activated successfully', 'success');
        });
    </script>
</body>
</html> 