<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>User Details</h2>
    <div>
        <a href="/admin/users" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
        <form action="/admin/toggle-user/<%= user.telegram_id %>" method="POST" class="d-inline ms-2">
            <button type="submit" class="btn <%= user.is_blocked ? 'btn-success' : 'btn-danger' %>">
                <%= user.is_blocked ? 'Unblock User' : 'Block User' %>
            </button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">User Profile</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="bg-light rounded-circle d-inline-flex justify-content-center align-items-center" style="width: 100px; height: 100px;">
                        <i class="bi bi-person-fill fs-1"></i>
                    </div>
                    <h4 class="mt-3"><%= user.first_name %> <%= user.last_name || '' %></h4>
                    <p class="text-muted">@<%= user.username || 'No username' %></p>
                    <span class="badge <%= user.is_blocked ? 'bg-danger' : 'bg-success' %> p-2">
                        <%= user.is_blocked ? 'Blocked' : 'Active' %>
                    </span>
                </div>
                
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Telegram ID
                        <span class="text-muted"><%= user.telegram_id %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Joined Date
                        <span class="text-muted"><%= new Date(user.created_at).toLocaleDateString() %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Lookups
                        <span class="badge bg-primary rounded-pill"><%= stats.totalLookups %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Valid Lookups
                        <span class="badge bg-success rounded-pill"><%= stats.validLookups %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Invalid Lookups
                        <span class="badge bg-danger rounded-pill"><%= stats.invalidLookups %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Daily Check Limit
                        <span class="badge bg-info rounded-pill"><%= user.check_limit || 10 %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Used Today
                        <span class="badge bg-warning rounded-pill"><%= user.daily_checks || 0 %> / <%= user.check_limit || 10 %></span>
                    </li>
                </ul>
                
                <div class="card-footer">
                    <form action="/admin/users/<%= user.telegram_id %>/update-limit" method="POST" class="mb-2">
                        <div class="input-group">
                            <input type="number" class="form-control" name="check_limit" value="<%= user.check_limit || 10 %>" min="1" required>
                            <button class="btn btn-primary" type="submit">Update Limit</button>
                        </div>
                    </form>
                    <form action="/admin/users/<%= user.telegram_id %>/reset-checks" method="POST">
                        <button type="submit" class="btn btn-outline-warning w-100">Reset Daily Checks</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Lookups</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Phone Number</th>
                                <th>Country</th>
                                <th>Region</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lookupHistory.forEach(lookup => { %>
                                <tr>
                                    <td><%= lookup.phone_number %></td>
                                    <td><%= lookup.country || 'N/A' %></td>
                                    <td><%= lookup.region || 'N/A' %></td>
                                    <td>
                                        <span class="badge <%= lookup.is_valid ? 'bg-success' : 'bg-danger' %>">
                                            <%= lookup.is_valid ? 'Valid' : 'Invalid' %>
                                        </span>
                                    </td>
                                    <td><%= new Date(lookup.created_at).toLocaleString() %></td>
                                </tr>
                            <% }); %>
                            <% if (lookupHistory.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center">No lookup history</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
                <% if (lookupHistory.length > 0) { %>
                    <a href="/admin/history?user=<%= user.telegram_id %>" class="btn btn-sm btn-primary float-end">
                        View All History
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div> 